{
    "name": "b-hayes/cli",
    "description": "Runs any PHP Class as a command line application",
    "license": "MIT",
    "authors": [
        {
            "name": "b-hayes",
            "email": "bradozman@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "BHayes\\CLI\\": "php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BHayes\\CLI\\Test\\": "test"
        }
    },
    "config": {
        "secure-http": false
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5"
    },
    "scripts": {
        "style": "phpcs --standard=.phpcs.xml",
        "test": "phpunit -c test/phpunit.xml test",
        "test-report": "echo Code coverage will not work for this project since tests are run via shell executions."
    },
    "bin": [
        "bin/cli"
    ]
}
