{
    "name": "bhayes/cli",
    "description": "Runs a given class methods via cli",
    "license": "proprietary",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.php7.localhost"
        }
    ],
    "authors": [
        {
            "name": "b-hayes",
            "email": "bradozman@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "BHayes\\CLI\\": "php"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BHayes\\CLI\\Test\\": "test"
        }
    },
    "config": {
        "secure-http": false
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpunit/phpunit": "^8.5"
    },
    "scripts": {
        "style_DISABLED": "phpcs --standard=.phpcs.xml",
        "test": "phpunit -c test/phpunit.xml test --coverage-html test/report"
    }
}
